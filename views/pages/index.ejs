<!DOCTYPE html>
<html>
<head>
  <title>Address Book</title>
  <link rel="stylesheet" type="text/css" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" />
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
  <script type="text/javascript" src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
  <link rel="stylesheet" type="text/css" href="/stylesheets/main.css" />

</head>

<body>

<div class="container">
  <div>
      <h1>Zach's Node.js Address Book</h1>

    <ul class="nav nav-tabs" role="tablist">
      <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Login</a></li>
      <li role="presentation" style="display:none;"><a href="#logout" aria-controls="profile" role="tab" data-toggle="tab">Logout</a></li>
      <li role="presentation" style="display:none;"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">My Contacts</a></li>
      <li role="presentation" style="display:none;"><a href="#messages" aria-controls="messages" role="tab" data-toggle="tab">New Contact</a></li>
    </ul>

    <div class="tab-content">
      <div role="tabpanel" class="tab-pane active" id="home">
          <h2>Please login</h2>

          <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#registerModal">
              Create an account
          </button>
      </div>



        <div role="tabpanel" class="tab-pane" id="profile">My Contacts</div>
      <div role="tabpanel" class="tab-pane" id="messages">New Contacts</div>
      <div role="tabpanel" class="tab-pane" id="logout">Logout</div>
    </div>

  </div>

</div>

<!-- Modal -->
<div class="modal fade" id="registerModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Register</h4>
            </div>
            <div class="modal-body">
                  <div class="form-group">
                        <label>Name:</label>
                        <input id="reg_name" type="text" class="form-control" name="name">
                    </div>
                    <div class="form-group">
                        <label>Email:</label>
                        <input id="reg_email" type="text" class="email" name="email">
                    </div>
                    <div class="form-group">
                        <label>Password:</label>
                        <input id="reg_pw" type="text" class="form-contorl" name="password">
                    </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button id="btn_register" type="button" class="btn btn-primary" data-dismiss="modal">Sign-Up</button>
            </div>
        </div>
    </div>
</div>

<script>
    $("#btn_register").on('click',function(){
        $.get( "/register", { name: $("#reg_name").val(), email: $("#reg_email").val(), pass: $("#reg_pw").val() } )
                .done(function( data ) {
                    if(data.status = true){
                        alert("Your account was saved!");
                    }
                    else{
                        alert("Your account was not saved!");
                    }
                });
    });

</script>

</body>
</html>
